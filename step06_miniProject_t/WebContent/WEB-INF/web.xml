<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	id="WebApp_ID" version="2.5">
	<display-name>step06_miniProject_t</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
	
		<servlet-name>GuestBookServlet</servlet-name>
		<servlet-class>guestbook.controller.GuestBookServlet</servlet-class>
		<init-param>
			<param-name>id</param-name>
			<param-value>busan</param-value>
		</init-param>
		<init-param>
			<param-name>charset</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<context-param>
		<param-name>contextConfig</param-name>
		<param-value>/META-INF/context.xml</param-value>
	</context-param>
	
	<servlet-mapping>
		<servlet-name>GuestBookServlet</servlet-name>
		<url-pattern>/guestbook.do</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>Encoding</filter-name>
		<filter-class>util.EncodingFilter</filter-class>
		<init-param>
			<param-name>charset</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>Encoding</filter-name>
		<url-pattern>/guestbook.do</url-pattern>
	</filter-mapping>

	<listener>
		<display-name></display-name>
		<listener-class>util.RequestListener</listener-class>
	</listener>

	<resource-ref>
		<description>DB Connection</description>
		<res-ref-name>jdbc/mysql</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>



	<!-- 웹으로 접속한 사용자가 JSP 파일로 직접 접근할 수 없게 한다. -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>PreventViewingJSPs</web-resource-name>
			<description>웹으로 접속한 사용자가 JSP파일로 직접 접근할 수 없도록 한다.</description>
			<url-pattern>*.jsp</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>Denial JSP</role-name>
		</auth-constraint>
	</security-constraint>

	<!-- 웹으로 접속한 사용자가 index.html 파일로 직접 접근할 수 있게 한다. -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>ViewingIndex.html</web-resource-name>
			<url-pattern>/index.html</url-pattern>
		</web-resource-collection>
		<!-- OMIT auth-constraint -->
	</security-constraint>

	<!-- 웹으로 접속한 사용자가 write.html 파일로 직접 접근할 수 있게 한다. -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>Viewingwrite.html</web-resource-name>
			<url-pattern>/write.html</url-pattern>
		</web-resource-collection>
		<!-- OMIT auth-constraint -->
	</security-constraint>

	<!-- 웹으로 접속한 사용자가 html 파일로 직접 접근할 수 없게 한다. -->
	<security-constraint>
		<web-resource-collection>
			<web-resource-name>PreventViewingHTMLs</web-resource-name>
			<description>전체</description>
			<url-pattern>*.html</url-pattern>
			<http-method>GET</http-method>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>Denial HTML</role-name>
		</auth-constraint>
	</security-constraint>

	<!-- 접근 거부된 페이지 접근 시 error403.jsp로 이동 -->
	<error-page>
		<error-code>403</error-code>
		<location>/error403.jsp</location>
	</error-page>

	<!-- 찾을 수 없는 페이지 이동 시 error404.jsp로 이동 -->
	<error-page>
		<error-code>404</error-code>
		<location>/error404.jsp</location>
	</error-page>
	
	
	


</web-app>